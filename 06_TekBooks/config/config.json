{

    
    "express": {
        "view cache": false,
        "view engine": "js",
        "views": "path:./.build/templates"
    },
    

    
    "view engines": {
        "js": {
            "module": "engine-munger",
            "renderer": {
                "method": "js",
                "arguments": [
                    { "cache": true },
                    {
                        "views": "config:express.views",
                        "view engine": "config:express.view engine",
                        "specialization": "config:specialization",
                        "i18n": "config:i18n"
                    }
                ]
            }
        }
    },
    

    
    "i18n": {
        "contentPath": "path:./locales",
        "fallback": "en-US"
    },
    

    "specialization": {
    },

    "middleware": {

        "appsec":{
          "module":{
            "arguments":[
            {
              "xframe": "SAMEORIGIN",
              "p3p": false,
              "csp": false
            }
            ]
          }
        },
        
        "csrf":{
          "enabled": true,
          "priority": 111,
          "route": "/((?!manage)|(?!cart))*",
          "module":{
            "name": "lusca",
            "method": "csrf",
            "arguments": [{}]
          }
        },
        
        "expressView": {
            "priority": 100,
            "enabled": true,
            "module": {
                "name": "engine-munger/lib/expressView"
            }
        },
        

        "static": {
            "module": {
                "arguments": [ "path:./.build" ]
            }
        },

        "router": {
            "module": {
                "arguments": [{ "directory": "path:./controllers" }]
            }
        }

    }
}
